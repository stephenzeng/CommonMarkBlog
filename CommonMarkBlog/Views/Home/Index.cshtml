@model CommonMarkBlog.Models.Blog

<div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Title" })
        </div>
            <div class="form-group">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", placeholder = "Write your post here..." })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
    }
</div>
<div>
    Preview:
    <div id="Preview"></div>
</div>

@section scripts
{
    <script src="~/Scripts/commonmark-editor.js"></script>
}