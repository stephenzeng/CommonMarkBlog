@model IEnumerable<CommonMarkBlog.Models.Post>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6">
                <span class="fa fa-tags"></span>
                Blog posts
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("Edit")" class="btn btn-default pull-right">Write a post</a>
            </div>
        </div>


    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>Post Title</th>
                    <th>Created Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(post.Title, "View", "Home", new {post.Id}, null)</td>
                        <td>@post.CreatedDate.ToLongDateString() @post.CreatedDate.ToShortTimeString()</td>
                        <td>@Html.ActionLink("Edit", "Edit", "Home", new { post.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>